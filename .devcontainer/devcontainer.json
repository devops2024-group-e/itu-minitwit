{
    "name": "minitwit-dotnet7",
    "image": "mcr.microsoft.com/devcontainers/dotnet:7.0", // Set to latest python 3 image version. That means, if a new minor version of their python 3 image is released, it will be used.
    "forwardPorts": [
        8001
    ],
    "postCreateCommand": "sudo sh ./.devcontainer/setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools-extension-pack",
                "visualstudioexptteam.vscodeintellicode"
            ]
        }
    }
}
