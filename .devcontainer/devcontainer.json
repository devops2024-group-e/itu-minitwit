{
    "name": "minitwit-python3",
    "image": "mcr.microsoft.com/devcontainers/python:3", // Set to latest python 3 image version. That means, if a new minor version of their python 3 image is released, it will be used.
    "forwardPorts": [
        8001
    ],
    "postCreateCommand": "sudo apt install libsqlite3-dev; sudo apt install sqlitebrowser; pip3 install flask",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools-extension-pack",
                "visualstudioexptteam.vscodeintellicode"
            ]
        }
    }
}
